 </thead>

 <tbody>
  <% @users.each do |user| %>
    <tr>
      <th>
        <% if user.image.attached? %> 
            <%= image_tag current_user.image,class:"rounded-circle",widt:"50", height:"50" %>
        <% else %>
            <%= image_tag "no_image.jpeg",class:"rounded-circle",widt:"50", height:"50" %>
        <% end %>
      </th>
      <th><%= user.name %></th>
      <th><%= link_to "詳細", user_path(user.id) %></th>
    </tr>
  <% end %>
 </tbody>
</table>

